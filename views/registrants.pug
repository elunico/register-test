html
head
title Registrants

link(rel="stylesheet" href="/css/registrants.css")

body
  h1 Registrants

  table
    thead
      th Name
      th Email
      th Sport
    tbody
      each registrant in registrants
        tr
          td= registrant.name
          td(class="email")= registrant.email
          td= registrant.sport


  a(href="/" class="button") Home
